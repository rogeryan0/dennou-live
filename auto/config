#!/bin/sh

MIRROR_DEBIAN="http://cdn.debian.net/debian/"
MIRROR_SECURITY="http://security.debian.org/"
MIRROR_BOOTSTRAP=${MIRROR_DEBIAN}
MIRROR_VOLATILE=${MIRROR_DEBIAN}

DISTRIBUTION="squeeze"

lb config noauto \
	--apt-recommends true \
	--archive-areas "main" \
	--backports false \
	--binary-images iso-hybrid \
	--bootloader syslinux \
	--debian-installer live \
	--debian-installer-distribution ${DISTRIBUTION} \
	--iso-publisher "GFD Dennou Club; http://www.gfd-dennou.org/;" \
	--linux-flavours 486 \
	--mirror-binary ${MIRROR_DEBIAN} \
	--mirror-binary-security ${MIRROR_SECURITY} \
	--mirror-binary-volatile ${MIRROR_VOLATILE} \
	--mirror-bootstrap ${MIRROR_BOOTSTRAP} \
	--mirror-chroot ${MIRROR_DEBIAN} \
	--mirror-chroot-security ${MIRROR_SECURITY} \
	--mirror-chroot-volatile ${MIRROR_VOLATILE} \
	--security true \
	--syslinux-timeout 10 \
	--tasks "japanese japanese-desktop lxde desktop laptop" \
	--tasksel aptitude \
	--volatile false \
	--win32-loader true \
	-d ${DISTRIBUTION} \
	-l ja \
	-r live.debian.net \
	--syslinux-splash `pwd`/config/binary_syslinux/splash.png \
	${@}
